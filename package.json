    "@types/extract-text-webpack-plugin": "3.0.0",
    "@types/glob": "5.0.35",
    "@types/globby": "6.1.0",
    "@types/grunt": "0.4.*",
    "@types/gzip-size": "4.0.0",
    "@types/html-webpack-plugin": "2.30.3",
    "@types/jsonfile": "4.0.1",
    "@types/loader-utils": "1.1.0",
    "@types/log-symbols": "2.0.0",
    "@types/log-update": "2.0.0",
    "@types/mockery": "1.4.29",
    "@types/node": "~9.6.5",
    "@types/optimize-css-assets-webpack-plugin": "1.3.1",
    "@types/ora": "1.3.1",
    "@types/rimraf": "2.0.2",
    "@types/sinon": "4.0.0",
    "@types/strip-ansi": "3.0.0",
    "@types/tapable": "0.2.4",
    "@types/webpack": "3.8.1",
    "@types/webpack-chunk-hash": "0.4.0",
    "@types/webpack-manifest-plugin": "1.3.1",
    "@types/yargs": "8.0.2",
