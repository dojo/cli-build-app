    "grunt-dojo2": "latest",
    "grunt-tslint": "5.0.1",
    "http-server": "^0.11.1",
    "husky": "0.14.3",
    "intern": "4.1.0",
    "lint-staged": "6.0.0",
    "mockery": "2.1.0",
    "npm-run-all": "^4.1.3",
    "prettier": "1.8.2",
    "rimraf": "2.6.2",
    "shelljs": "0.7.8",
    "shx": "0.2.2",
    "sinon": "4.1.2",
