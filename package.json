{
  "name": "@dojo/cli-build-app",
  "version": "3.0.0-pre",
  "description": "CLI command to build Dojo 2 applications",
  "engines": {
    "npm": ">=3.0.0"
  },
  "private": true,
  "homepage": "http://dojo.io",
  "bugs": {
    "url": "https://github.com/dojo/cli-build-app/issues"
  },
  "license": "BSD-3-Clause",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/cli-build-app.git"
  },
  "scripts": {
    "artifact:build": "cd test-app && npm run build:dist:evergreen && shx mv output/dist output/dist-evergreen && npm run build:dev:evergreen && shx mv output/dev output/dev-evergreen && npm run build:dist && npm run build:dev && npm run build:dist:evergreen",
    "artifact:install": "cd test-app && shx rm -rf node_modules && npm i && npm run install-build-app",
    "artifact:package": "cd dist && npm pack -q ./release && shx mv dojo-cli-build-app-* dojo-cli-build-app.tgz && cd ..",
    "build:static:dev": "cpx \"{src,tests}/**/*.{d.ts,html,md,json,js,css}\" dist/dev",
    "build:static:release": "cpx \"src/**/*.{d.ts,json}\" dist/release",
    "build:cjs": "tsc",
    "build": "npm-run-all -p build:** -s package",
    "clean": "rimraf dist coverage output test-app/output",
    "intern": "intern",
    "lint:tslint": "tslint -p .",
    "lint:prettier": "prettier -l \"{src,tests}/**/*.{ts,tsx}\"",
    "lint": "run-p lint:*",
    "package": "dojo-package",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"{src,tests}/**/*.{ts,tsx}\"",
    "test:ci": "run-p --race serve test",
    "test:cypress": "cypress run",
    "test": "run-s lint build artifact:package artifact:install build intern artifact:build test:cypress",
    "serve": "http-server -p 9999 -c-1 --silent",
    "uploadCoverage": "codecov --file=coverage/coverage.json",
    "watch:ts": "dojo-tsc-watcher -p tsconfig.json -- dojo-package",
    "watch": "run-p watch:ts \"build:static:** -- --watch\""
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  },
  "devDependencies": {
    "@dojo/cli": "^3.0.0-alpha.1",
    "@dojo/scripts": "^3.0.0-alpha.6",
    "@types/clean-webpack-plugin": "0.1.0",
    "@types/execa": "0.8.0",
    "@types/express": "4.11.0",
    "@types/extract-text-webpack-plugin": "3.0.0",
    "@types/globby": "6.1.0",
    "@types/gzip-size": "4.0.0",
    "@types/html-webpack-plugin": "2.30.3",
    "@types/jsonfile": "4.0.1",
    "@types/loader-utils": "1.1.0",
    "@types/log-symbols": "2.0.0",
    "@types/log-update": "2.0.0",
    "@types/mockery": "1.4.29",
    "@types/node": "~9.6.5",
    "@types/optimize-css-assets-webpack-plugin": "1.3.1",
    "@types/ora": "1.3.1",
    "@types/rimraf": "2.0.2",
    "@types/sinon": "~4.3.3",
    "@types/strip-ansi": "3.0.0",
    "@types/tapable": "0.2.4",
    "@types/webpack": "3.8.1",
    "@types/webpack-chunk-hash": "0.4.0",
    "@types/webpack-manifest-plugin": "1.3.1",
    "@types/yargs": "^10.0.0",
    "codecov": "~3.0.4",
    "cpx": "~1.5.0",
    "cypress": "^3.0.1",
    "execa": "0.8.0",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "lint-staged": "6.0.0",
    "mockery": "2.1.0",
    "npm-run-all": "~4.1.3",
    "rimraf": "2.6.2",
    "shelljs": "0.7.8",
    "shx": "0.2.2",
    "sinon": "~4.5.0"
  },
  "dependencies": {
    "@dojo/framework": "^3.0.0-alpha.1",
    "@dojo/webpack-contrib": "^3.0.0-alpha.2",
    "@theintern/istanbul-loader": "1.0.0-beta.1",
    "auto-require-webpack-plugin": "1.0.1",
    "chalk": "~2.4.0",
    "clean-webpack-plugin": "0.1.17",
    "cli-columns": "3.1.2",
    "css-loader": "0.28.7",
    "express": "4.16.2",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "globby": "7.1.1",
    "gzip-size": "4.1.0",
    "html-webpack-plugin": "3.2.0",
    "imports-loader": "0.7.1",
    "json-css-module-loader": "1.0.2",
    "jsonfile": "4.0.0",
    "loader-utils": "1.1.0",
    "log-symbols": "2.1.0",
    "log-update": "2.3.0",
    "optimize-css-assets-webpack-plugin": "3.2.0",
    "ora": "1.3.0",
    "pkg-dir": "2.0.0",
    "postcss-cssnext": "3.1.0",
    "postcss-import": "11.0.0",
    "postcss-loader": "2.0.8",
    "slash": "1.0.0",
    "source-map-loader-cli": "0.0.1",
    "strip-ansi": "4.0.0",
    "style-loader": "0.19.0",
    "ts-loader": "3.1.1",
    "typed-css-modules": "0.3.1",
    "uglifyjs-webpack-plugin": "1.1.0",
    "umd-compat-loader": "2.1.1",
    "webpack": "3.8.1",
    "webpack-bundle-analyzer-sunburst": "1.3.0",
    "webpack-chunk-hash": "0.5.0",
    "webpack-dev-middleware": "2.0.3",
    "webpack-hot-middleware": "2.21.0",
    "webpack-manifest-plugin": "1.3.2",
    "webpack-mild-compile": "1.0.0",
    "webpack-pwa-manifest": "3.6.2"
  }
}
